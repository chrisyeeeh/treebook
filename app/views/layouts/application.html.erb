<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container">
				<div class="navbar-brand">
					<%= link_to "TreeBook", root_url %>
				</div>
			
				<ul class="nav nav-pills">
					<li><%= link_to "All Statuses", statuses_path %></li>
					<li><a href="#">Link</a></li>
					
					<% if user_signed_in? %>
						<li class="pull-right"><%= link_to current_user.full_name, edit_user_registration_path %></li>
						<li class="pull-right"> <%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li class="pull-right"><%= link_to "Register", new_user_registration_path %></li>
						<li class="pull-right"><%= link_to "Sign In", new_user_session_path %></li>
					<%end%>
				</ul>

				
			</div>

		</div>
	</div>

	<% if user_signed_in? %>
	<%= link_to "Post a New Status", new_status_path, class:"btn btn-success"%>

<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
<% end %>
	<div class="container">
		<%= yield %>
	</div>
</body>
</html>
